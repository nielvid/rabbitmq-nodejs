{
  "name": "node-typescript-server",
  "version": "1.0.0",
  "description": "Nodejs server typescript server",
  "main": "main.js",
  "scripts": {
    "build": "rimraf dist && tsc --build",
    "clean": "tsc --build --clean",
    "start": "concurrently \"tsc -w\" \"nodemon -q dist/main.js \"",
    "start:dev": "npm start",
    "start:prod": " export NODE_ENV=production && node dist/main.js",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.--fix": "prettier --write . && git add -A ."
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "nodejs"
  ],
  "author": "nielvid",
  "license": "MIT",
  "bugs": {},
  "homepage": "",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "concurrently": "^7.2.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typedi": "^0.10.0"
  }
}
